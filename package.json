{
  "name": "ai-voice-agent-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "python main.py",
    "dev:frontend": "cd frontend && npm run dev",
    "build:backend": "python -m compileall .",
    "build:frontend": "cd frontend && npm run build",
    "build:firebase": "cd frontend && npm run build",
    "deploy:firebase": "npm run build:firebase && firebase deploy --only hosting",
    "test": "pytest",
    "test:coverage": "pytest --cov=app",
    "lint": "flake8 app",
    "format": "black app"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "turbo": "^1.10.0"
  }
}